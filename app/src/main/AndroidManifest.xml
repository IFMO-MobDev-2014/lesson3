<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="year2013.ifmo.lesson3" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TranslationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PicturesActivity"
            android:label="@string/title_activity_pictures"
            android:parentActivityName=".TranslationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="year2013.ifmo.lesson3.TranslationActivity" />
        </activity>
    </application>
    <uses-permission
        android:name="android.permission.INTERNET"/>
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>
